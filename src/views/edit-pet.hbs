<h1>Edit Pet Detail</h1>
{{#with foundPet}}
  <form action="/pets/edit/{{petId}}" method="POST">
    <label for="name">Enter Item Name: </label>
    <input
      type="text"
      name="name"
      placeholder="Enter Name"
      value="{{name}}"
    /><br />

    <label for="photo">Enter URL: </label>
    <input
      type="text"
      name="photo"
      placeholder="Enter URL"
      value="{{photo}}"
    /><br />
    <label for="description">Enter Item Description: </label>
    <input
      type="text"
      name="description"
      placeholder="Enter Description"
      value="{{description}}"
    />
    <br />
    <button type="submit">Submit Edit</button>
  </form>
{{/with}}